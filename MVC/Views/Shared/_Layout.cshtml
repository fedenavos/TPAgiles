    .title-container {
        top: 0;
        background-color: white;
        position: fixed;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100vw;
        margin: 0;
        padding: 10px 0;
        box-shadow: 4px 1px 12px 8px var(--shadow-opacity);
        -webkit-box-shadow: 4px 1px 12px 8px var(--shadow-opacity);
        -moz-box-shadow: 4px 1px 12px 8px var(--shadow-opacity);
    }
    .footer {
        position: fixed;
        bottom: 0;
        width: 100vw;
        margin: 0;
        vertical-align: central;
        text-align: center;
        padding: 3px 0;
        background-color: white;
        box-shadow: -2px -5px 12px 8px var(--shadow-opacity);
        -webkit-box-shadow: -2px -5px 12px 8px var(--shadow-opacity);
        -moz-box-shadow: -2px -5px 12px 8px var(--shadow-opacity);
    }


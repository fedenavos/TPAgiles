{
    <script src="~/Scripts/Wordle/WordleVM.js"></script>
    <script type="text/javascript">
        var wordleVM = new WordleVM(@Html.Raw(data));
        console.log("PRUEBA");
        ko.applyBindings(wordleVM);
    </script>
}
<hr>
<section class="input-section">
    <div class="left-side">
        @Html.TextBoxFor(m => m.Nombre, new Dictionary<String, object>
            {
                { "class", "name-input" },
                { "placeholder", "Ingresa tu nombre" },
                { "data-bind", "value:Nombre" }
            })

        <label for="difficulty-dropdown">Selecciona la dificultad</label>
        <select onchange="setDifficulty()" name="difficulty-dropdown" class="difficulty-dropdown" id="difficulty-row">
            <option id="facil" value="1">Facil</option>
            <option id="medio" value="2">Medio</option>
            <option id="dificil" value="3">Dificil</option>
        </select>

        <label for="errors">Selecciona la cantidad de errores</label>
        <select name="errors" class="errors-dropdown" id="errors">
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
            <option value="6">6</option>
            <option value="7">7</option>
            <option value="8">8</option>
            <option value="9">9</option>
            <option value="10">10</option>
        </select>

        @Html.DisplayFor(m => m.Nombre)

        <button class="intentar-button" data-bind="click: newGame, enable: true">Jugar ahora!</button>

        @*@Html.ActionLink("Jugar ahora", "Game", "Home", Model, new Dictionary<String, object>
            {
                { "class", "intentar-button" },
                { "data-bind", "value:Game" }
            })*@
    </div>

</section>

<style>
    :root {
        --border-radius: 10px;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: sans-serif;
    }

    .left-side {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    .main-title {
        display: block;
        text-decoration: none;
        text-transform: uppercase;
        color: black;
        font-weight: 700;
        text-shadow: 0 0 10px #005276, 0 0 30px #005276;
    }

    .errors-dropdown,
    .difficulty-dropdown {
        margin: 15px 0;
        justify-content: center;
        font-size: 18px;
        border-radius: var(--border-radius);
        padding: 8px;
    }

    .difficulty-dropdown {
        width: 130px;
        background-color: #046f00;
        color: white;
        transition: transform .5s;
    }

    .errors-dropdown {
        width: 60px;
        height: 50px;
        border-radius: 50%;
    }

    input {
        height: 50px;
        font-size: 24px;
        border-radius: var(--border-radius);
        padding: 0 0 0 15px;
        text-transform: uppercase;
    }

    .name-input {
        margin: 0 0 15px 0;
    }

    .intentar-button {
        background-color: #1899D6;
        border: solid transparent;
        border-radius: 16px;
        border-width: 0 0 4px;
        box-sizing: border-box;
        color: #FFFFFF;
        cursor: pointer;
        display: inline-block;
        font-family: din-round, sans-serif;
        font-size: 15px;
        font-weight: 700;
        letter-spacing: .8px;
        line-height: 20px;
        margin: 15px 0 15px 0;
        outline: none;
        overflow: visible;
        padding: 13px 16px;
        text-align: center;
        text-transform: uppercase;
        touch-action: manipulation;
        transform: translateZ(0);
        transition: filter .2s;
        user-select: none;
        -webkit-user-select: none;
        vertical-align: middle;
        white-space: nowrap;
        width: 80%;
        transition: transform .5s;
        color: white;
        text-decoration: none;
    }

        .intentar-button:after {
            background-clip: padding-box;
            background-color: #1CB0F6;
            border: solid transparent;
            border-radius: var(--border-radius);
            border-width: 0 0 4px;
            bottom: -4px;
            content: "";
            left: 0;
            position: absolute;
            right: 0;
            top: 0;
            z-index: -1;
        }

    #facil {
        background-color: #00b100;
    }



    #medio {
        background-color: #b8b800;
    }

    #dificil {
        background-color: #FF0000;
    }

    .intentar-button:hover {
        transform: scale(.95);
        color: white;
        text-decoration: none;
    }

    .input-section {
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        padding: 50px;
        gap: 150px
    }

    h1 {
        margin: 15px;
        text-align: center;
    }

    .difficulty-dropdown:focus {
        outline: none;
        transform: scale(1.05);
    }

    .input-container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .difficulty-row {
        display: flex;
        flex-direction: row;
        gap: 15px;
    }
</style>
<script>
    let difficulty = document.getElementById("difficulty-row")
    let facil = document.getElementById("facil")
    let medio = document.getElementById("medio")
    let dificil = document.getElementById("dificil")
    const verde = "#046f00";
    const amarillo = "#b8b800";
    const rojo = "#FF0000";

    function difficultyColors() {
        facil.style.backgroundColor = verde;
        medio.style.backgroundColor = amarillo;
        dificil.style.backgroundColor = rojo;
    }

    function setDifficulty() {
        switch (difficulty.value) {
            case "facil":
                difficulty.style.backgroundColor = verde;
                difficultyColors();
                return;
            case "medio":
                difficulty.style.backgroundColor = amarillo;
                difficultyColors();
                return;
            case "dificil":
                difficulty.style.backgroundColor = rojo;
                difficultyColors();
                return;

        }
    }

</script>
